{
  "name": "vite-monorepo-starter",
  "version": "0.1.0",
  "description": "vite monorepo starter with pnpm",
  "main": "index.js",
  "private": true,
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "dev": "turbo run dev",
    "build:test": "turbo run build:test",
    "build": "turbo run build",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vadxq/vite-monorepo-starter.git"
  },
  "keywords": [
    "vite",
    "pnpm",
    "monorepo",
    "turborepo"
  ],
  "author": "vadxq",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/vadxq/vite-monorepo-starter/issues"
  },
  "homepage": "https://github.com/vadxq/vite-monorepo-starter#readme",
  "devDependencies": {
    "pnpm": "^6.30.0",
    "prettier": "^2.5.1",
    "turbo": "^1.1.0",
    "typescript": "^4.5.4"
  },
  "turbo": {
    "baseBranch": "origin/main",
    "npmClient": "pnpm",
    "pipeline": {
      "build": {
        "dependsOn": [
          "^build"
        ],
        "outputs": [
          "dist/**",
          ".next/**"
        ]
      },
      "build:test": {
        "dependsOn": [
          "^build:test"
        ],
        "outputs": [
          "dist/**",
          ".next/**"
        ]
      },
      "test": {
        "dependsOn": [
          "build"
        ],
        "outputs": []
      },
      "lint": {
        "outputs": []
      },
      "deploy": {
        "dependsOn": [
          "build"
        ]
      },
      "dev": {
        "cache": false
      }
    }
  }
}
